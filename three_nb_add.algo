ALGORITHM longueur_voyelle_mot
VAR
    i,sum : INTEGER;
    longueur :  := value;
    phrase : STRING;
BEGIN
    i := 0;
    sum := 0;
    WRITE("saisir une phrase se terminant par un point")
    READ(phrase)
    
    WHILE (phrase[i] != ".") DO
        sum++ ; // sum = sum +1 ; 
        i++ ; // i = i +1
    END_WHILE
    WRITE(sum)
END
    



